<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Sub -> Toolbar -->
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:padding">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/space_pre_medium</item>
        <item name="android:paddingBottom">@dimen/space_pre_medium</item>
        <item name="android:paddingStart">@dimen/space_pre_medium</item>
        <item name="android:paddingEnd">@dimen/space_pre_medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/space_pre_medium</item>
    </style>

</resources>
